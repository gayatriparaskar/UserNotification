{
  "name": "snake-shop-react",
  "version": "1.0.0",
  "description": "Premium Snake E-commerce Website built with React and Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "generate-icons": "node scripts/generate-icons.js",
    "pwa:install": "npm run generate-icons && echo 'PWA icons generated! Open public/icons/generate-icons.html to create PNG files.'",
    "build:production": "NODE_ENV=production vite build",
    "build:vercel": "npx vite build",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel"
  },
  "dependencies": {
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "terser": "^5.44.0",
    "vite": "^4.4.5"
  },
  "keywords": [
    "react",
    "tailwind",
    "ecommerce",
    "snakes",
    "reptiles",
    "shopping"
